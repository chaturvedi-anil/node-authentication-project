<header>
    <div class="project-title">
        <h1>NodeJs Authentication System</h1>
    </div>

    <% if(locals.user) {%>
        <div class="others-link">
            <ul>
                <li>
                    <a href="/users/profile"> <%= user.name %> </a>
                </li>
                <li>
                    <a href="/users/destroy-session"> Sign Out</a>
                </li>
            </ul>
        </div>
    <% } else { %> 
        <div class="others-link">
            <ul>
                <li>
                    <a href="/users/sign-up"> Sign Up </a>
                </li>
                <li>
                    <a href="/users/sign-in"> Sign In</a>
                </li>
            </ul>
        </div>
    <% } %>
</header>